{% extends 'base.html.twig' %}

{% block title %}Hello FibonacciController!{% endblock %}

{% block body %}
    {{ form_start(form) }}

    <h1>Calculator ciÄ…gu Fibonacci'ego</h1>

    <div id="dataCalcTypes" data-calc-types="{{ calcTypes|json_encode|e('html_attr') }}">
        {{ form_label(form.calcType) }}
        {{ form_widget(form.calcType, {
            'id': 'calcType',
        }) }}
    </div>
    <div>
        {{ form_label(form.number) }}
        {{ form_widget(form.number, {
            'id': 'inputNumber',
            'type': 'number',
        }) }}
    </div>

    {{ form_widget(form.submit) }}

    {{ form_errors(form.number) }}

    {{ form_end(form) }}

    {% if result is not null %}
        <p id="result">{{ result }}</p>
    {% endif %}

    {% block javascripts %}
        {{ encore_entry_script_tags('index_fibonacci') }}
    {% endblock %}

{% endblock %}
